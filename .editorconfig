# EditorConfig is awesome.
# see: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
max_line_length = off
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 4

[{Makefile,*.mk}]
indent_style = tab

[{*.yaml,*.yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = false

[Dockerfile]
indent_size = 4
